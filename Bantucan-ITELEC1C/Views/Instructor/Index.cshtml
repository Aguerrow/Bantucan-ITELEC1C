
@model IEnumerable<Instructor>;

<div>Instructor List</div>
<a href="@Url.Action("AddInstructor")" class="btn-primary btn-primary mb-3">Add Instructor</a>


<table  class="table table-dark">
            
        <tr>
            <th colspan="7">Instructor</th>
        </tr>

        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Rank</td>
            <td>Hiring Date</td>
            <td>Status</td>
            <td>Details</td>
            <td>Edit</td>
           
            
        </tr>
    @foreach (var Instructor in Model)
    {
        <tr>
            <td>@Instructor.Id</td>
            <td>@Instructor.FirstName @Instructor.LastName</td>
            <td>@Instructor.Rank</td>
            <td>@Instructor.HiringDate</td>
            <td>@if(@Instructor.IsTenured == true)
                {
                      <p>Permanent</p>          
                }
                else
                {
                    <p>Probationary</p>
                }
            </td>
            <td><a asp-action="ShowDetail" asp-route-id="@Instructor.Id">Show Details</a></td>
            <td><a asp-action="Edit" asp-route-id="@Instructor.Id">Edit</a></td>
        </tr>
    }
</table>
