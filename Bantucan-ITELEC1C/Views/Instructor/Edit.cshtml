@model Instructor;

@{
    <h1>Edit Instructor</h1>
    <form action="AddStudent" method="post">
        <div class="form-group">
            <label asp-for="Id">Id</label>
            <input asp-for="Id" class="form-control" readonly>
        </div>
        <div class="form-group">
            <label asp-for="LastName">Last Name</label>
            <input asp-for="LastName" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="FirstName">First Name</label>
            <input asp-for="FirstName" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Rank">Rank</label>
            <select class="form-control" id="Status" name="Rank">
                <option>Select Rank</option>
                <option>Instructor</option>
                <option>AssistantProfessor</option>
                <option>AssociateProfessor</option>
                <option>Professor</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="HiringDate">Hiring Date</label>
            <input asp-for="HiringDate" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="IsTenured">Status</label>
            <select class="form-control" id="Status" name="Status">
                <option>Select Status</option>
                <option>Permanent</option>
                <option>Probationary</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
}
